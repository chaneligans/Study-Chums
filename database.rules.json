{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    "Users": {
      ".read": true,
      ".indexOn": ["index", "name", "Major"],
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "TotalUsers": {
      ".read": true,
        ".write": true
    },
    "Applications": {
      ".read": true,
        ".write": true
    },
    "Chums": {
      ".read": true,
        ".write": true
    }
  }
}